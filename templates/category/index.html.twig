{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<section class="table-components table-responsive mt-5">
    <div class="container-fluid">

        <div class="row">
            <div class="col-6">
                <h2>Liste des catégories</h2>
            </div>
            <div class="col-6 text-end">
                <a href="{{ path('app_category_new') }}" class="btn btn-primary">Ajouter une catégorie</a>
            </div>
        </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.libelle }}</td>
                <td>
                    <a class="text-dark-emphasis" href="{{ path('app_category_edit', {'id': category.id}) }}">
                        <i class="lni lni-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
{% endblock %}
