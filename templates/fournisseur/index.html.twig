{% extends 'base.html.twig' %}

{% block title %}Liste des fournisseurs{% endblock %}

{% block body %}
<section class="table-components table-responsive table-responsive mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <h2>Liste des fournisseurs</h2>
            </div>
            <div class="col-6 text-end">
                <a href="{{ path('app_fournisseur_new') }}" class="btn btn-primary">Ajouter un fournisseur</a>
            </div>
        </div>
        <div class="row">
            <div class="col-10 mt-3">
                <button id="exportCSV" onclick="exportCSV()" class="btn btn-warning">CSV</button>
                <button id="exportExcel" onclick="exportExcel()" n class="btn btn-warning">Excel</button>
                <button id="exportPDF" onclick="exportPDF()" class="btn btn-warning">PDF</button>
            </div>
            <div class="col-2 text-end mt-3">
                <input type="text" id="search-all" class="form-control" placeholder="Search in tableau">
            </div>
        </div>
    <table class="table table-striped table-bordered mt-3" id="myTable">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Libelle</th>
                <th>Entreprise</th>
                <th>Responsable</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Email</th>
                <th>Matfiscal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fournisseur in fournisseurs %}
            <tr>
                <td>{{ fournisseur.code }}</td>
                <td>{{ fournisseur.libelle }}</td>
                <td>{{ fournisseur.entreprise }}</td>
                <td>{{ fournisseur.responsable }}</td>
                <td>{{ fournisseur.adresse }}</td>
                <td>{{ fournisseur.ville }}</td>
                <td>{{ fournisseur.tel }}</td>
                <td>{{ fournisseur.email }}</td>
                <td>{{ fournisseur.matfiscal }}</td>
                <td>
                    <a class="text-dark-emphasis" href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}">
                        <i class="lni lni-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}
